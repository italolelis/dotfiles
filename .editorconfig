root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{py,pyw}]
indent_size = 4

[*.{js,jsx,ts,tsx,json,css,scss,html,yml,yaml}]
indent_size = 2

[*.{sh,bash,zsh}]
indent_size = 2

[*.{go,rs}]
indent_size = 4

[Makefile]
indent_style = tab

[Dockerfile]
indent_size = 4
